{
    "name": "markdown-code-features",
    "displayName": "LSP in markdown code block",
    "version": "0.0.2",
    "description": "LSP in markdown code block",
    "publisher": "mizchi",
    "private": true,
    "preview": true,
    "author": {
        "name": "mizchi"
    },
    "license": "SEE LICENSE IN LICENSE",
    "homepage": "https://github.com/tjx666/awesome-vscode-extension-boilerplate/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/tjx666/awesome-vscode-extension-boilerplate"
    },
    "bugs": {
        "url": "https://github.com/tjx666/awesome-vscode-extension-boilerplate/issues",
        "email": "ytj2713151713@gmail.com"
    },
    "keywords": [
        "boilerplate",
        "template"
    ],
    "categories": [
        "Other"
    ],
    "main": "./out/src/extension.js",
    "icon": "assets/logo.png",
    "engines": {
        "vscode": "^1.80.0"
    },
    "activationEvents": [
        "onLanguage:markdown",
        "onLanguage:mdx",
        "onLanguage:typescript",
        "onLanguage:javascript"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Svelte",
            "properties": {
                "markdown-code-features.enable": {
                    "type": "boolean",
                    "default": false,
                    "title": "Enable markdown-code-features",
                    "description": "Enables markdown code block diagnostics and completions"
                }
            }
        }
    },
    "eslintConfig": {
        "extends": "@yutengjing/eslint-config-typescript",
        "ignorePatterns": [
            "test-workspace"
        ]
    },
    "prettier": "@yutengjing/prettier-config",
    "lint-staged": {
        "*.{ts,json,md}": []
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "scripts": {
        "vscode:prepublish": "pnpm esbuild:base --minify",
        "preinstall": "npx only-allow pnpm",
        "postinstall": "stale-dep -u",
        "prepare": "simple-git-hooks",
        "clean": "npx rimraf -rf ./out",
        "esbuild:base": "stale-dep && tsx scripts/esbuild.ts",
        "esbuild:watch": "pnpm esbuild:base --sourcemap --watch",
        "esbuild:analyze": "pnpm esbuild:base --minify --metafile --analyze && esbuild-visualizer --metadata ./meta.json --open",
        "compile:test": "pnpm clean && tsc -b ./test/tsconfig.json",
        "lint": "eslint src --ext ts",
        "test": "stale-dep && pnpm compile:test && node ./out/test/runTests.js",
        "package": "vsce package --no-dependencies",
        "release": "npx @yutengjing/release",
        "publish:vs-marketplace": "vsce publish --no-dependencies",
        "publish:open-vsx": "ovsx publish --no-dependencies"
    },
    "devDependencies": {
        "@mdx-js/mdx": "^2.3.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.16.19",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "@types/vscode": "^1.80.0",
        "@vscode/test-electron": "^2.3.3",
        "@vscode/vsce": "^2.19.0",
        "@yutengjing/eslint-config-typescript": "^0.4.2",
        "@yutengjing/prettier-config": "^0.0.1",
        "@yutengjing/release": "^0.0.10",
        "@yutengjing/tsconfig-node": "^0.0.3",
        "colorette": "^2.0.20",
        "core-js": "^3.32.0",
        "esbuild": "^0.18.11",
        "esbuild-visualizer": "^0.4.1",
        "eslint": "^8.44.0",
        "glob": "^10.3.2",
        "lezer-markdown": "^0.14.5",
        "lint-staged": "^13.2.3",
        "mdast-util-mdxjs-esm": "^2.0.1",
        "mdast-util-from-markdown": "^2.0.0",
        "mdast-util-to-markdown": "^2.1.0",
        "micromark-extension-mdxjs-esm": "^2.0.1",
        "mocha": "^10.2.0",
        "ovsx": "^0.8.2",
        "prettier": "^3.0.0",
        "remark": "^14.0.3",
        "remark-mdx": "^2.3.0",
        "remark-parse": "^10.0.2",
        "rimraf": "^5.0.1",
        "rollup": "^3.28.0",
        "simple-git-hooks": "^2.8.1",
        "stale-dep": "^0.6.2",
        "tree-sitter": "^0.20.5",
        "tree-sitter-markdown": "^0.7.1",
        "tsm": "^2.3.0",
        "tsx": "^3.12.7",
        "typescript": "^5.1.6",
        "unified": "^11.0.0",
        "unist-util-inspect": "^8.0.0",
        "unist-util-visit": "^5.0.0",
        "vite": "^4.4.9",
        "vitest": "^0.34.1",
        "vscode-languageclient": "^8.1.0"
    }
}
