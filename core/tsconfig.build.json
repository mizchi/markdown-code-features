{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
}
